generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Property {
  id          Int    @id @default(autoincrement())
  name        String
  type        String // Input text
  isSpecial   String // Dropdown (e.g., "Yes", "No", "Featured")
  description String @db.Text
  status      String // Property status

  // Relations
  images        PropertyImage[]
  amenities     Amenity[]
  neighborhoods Neighborhood[]
  newLaunch     NewLauchProperty?

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  rcproperty       RCProperty?
  upcomingProperty UpcomingProperty?
}

model PropertyImage {
  id          Int      @id @default(autoincrement())
  url         String
  isThumbnail Boolean  @default(false)
  propertyId  Int
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model Amenity {
  id         Int      @id @default(autoincrement())
  name       String
  photoUrl   String
  propertyId Int
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model Neighborhood {
  id          Int      @id @default(autoincrement())
  name        String
  time        String
  description String? // Optional
  iconType    String // Dropdown select
  propertyId  Int
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model NewLauchProperty {
  launch_id   Int      @id @default(autoincrement())
  property_id Int      @unique
  description String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  property    Property @relation(fields: [property_id], references: [id], onDelete: Cascade)

  @@map("newlaunch_properties")
}

model RCProperty {
  rc_id       Int      @id @default(autoincrement())
  property_id Int      @unique
  type        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  property    Property @relation(fields: [property_id], references: [id], onDelete: Cascade)

  @@map("rc_properties")
}

model UpcomingProperty {
  up_id       Int      @id @default(autoincrement())
  property_id Int      @unique
  date        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  property    Property @relation(fields: [property_id], references: [id], onDelete: Cascade)

  @@map("upcoming_properties")
}
